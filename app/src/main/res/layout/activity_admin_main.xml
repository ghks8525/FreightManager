<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aam_cl_company_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/aam_tv_company_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회사 관리"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/aam_btn_user_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 관리"
                app:layout_constraintTop_toBottomOf="@id/aam_tv_company_manage"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/aam_btn_vehicle_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="차량 관리"
                app:layout_constraintTop_toBottomOf="@id/aam_tv_company_manage"
                app:layout_constraintStart_toEndOf="@id/aam_btn_user_manage"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aam_cl_working_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/aam_cl_company_manage"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/aam_tv_working_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업무 관리"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/aam_btn_location_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치 조회"
                app:layout_constraintTop_toBottomOf="@id/aam_tv_working_manage"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지난 업무 조회"
                app:layout_constraintTop_toBottomOf="@id/aam_tv_working_manage"
                app:layout_constraintStart_toEndOf="@id/aam_btn_location_manage"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aam_cl_today_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/aam_cl_working_manage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/aam_tv_today_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘 업무 리스트"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/aam_tv_today_list"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="배차 추가"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/aam_cl_today_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>