<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="com.jungbang.transitionmanager.ui.common.ComponentItemListener" />
        <variable
            name="pos"
            type="int" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_rect_white_fill_r8"
        android:orientation="horizontal"
        android:paddingVertical="12dp">

        <View
            android:layout_width="4dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_rect_green_fill_r16" />

        <TextView
            android:id="@+id/vh_tv_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/notosanskr_medium"
            android:text="박하늘 "
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/vh_tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/notosanskr_medium"
            android:text="12가 1246 "
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/vh_tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/notosanskr_medium"
            android:text="12 : 14 "
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/vh_tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/notosanskr_medium"
            android:text="12 : 14 "
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>
</layout>