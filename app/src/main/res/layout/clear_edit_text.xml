<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cet_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sel_text_box"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/cet_iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="18dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/cet_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        android:fontFamily="@font/notosanskr_regular"
        android:background="@color/transparent"
        android:textCursorDrawable="@drawable/cursor_drawable"
        app:layout_constraintTop_toTopOf="@id/cet_iv_icon"
        app:layout_constraintStart_toEndOf="@id/cet_iv_icon"
        app:layout_constraintEnd_toStartOf="@id/cet_iv_clear"
        app:layout_constraintBottom_toBottomOf="@id/cet_iv_icon"/>

    <ImageView
        android:id="@+id/cet_iv_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_close_circle"
        app:layout_constraintTop_toTopOf="@id/cet_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cet_et"/>

</androidx.constraintlayout.widget.ConstraintLayout>