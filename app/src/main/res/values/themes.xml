<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Transitionmanager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_0ECC6D</item>
        <item name="colorPrimaryVariant">@color/green_0ECC6D</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_0ECC6D</item>
        <item name="colorSecondaryVariant">@color/green_0ECC6D</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>

        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/sel_radio_btn</item>
    </style>

    <style name="bottomDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="height">540dp</item>
    </style>

</resources>